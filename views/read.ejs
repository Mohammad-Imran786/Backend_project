<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <div class="nav mb-5">
            <a class="text-blue-400" href="/">Back to Home</a>
        </div>
        <h1 class="mb-3">All Users:</h1>
        <div class="users flex gap-3 flex-wrap overflow-hidden">
            <% if(users.length > 0) { %> 
                <% users.forEach((user) => { %>
                    <div class="user max-w-72 p-5 bg-zinc-600 rounded-lg">
                        <div class="w-full h-52 rounded-lg bg-zinc-400 overflow-hidden">
                            <img class="w-full h-full object-cover" src="<%= user.image %>" alt="Photo">
                        </div>
                        <h3 class="text-xl mt-3"><%= user.name %></h3>
                        <h4><%= user.email %></h4>
                        <div class="mt-3 flex gap-20">
                            <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
                            <a class="text-red-300" href="/delete/<%= user._id %>">Delete User</a>
                        </div>
                    </div>
               <% }) %>
            <% } else { %>
                <div class="flex items-center justify-center w-screen">
                    <h2 class="text-2xl text-red-300">No Users Found!</h2>
                </div>
            <% } %>
             
        </div>
    </div>
</body>
</html>